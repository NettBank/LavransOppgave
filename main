# Importerer libraryen "Arcade" installert med pip install arcade kommandoen i Ledetekts.
import arcade
import random

# Setter høyden og bredden for vinduet.
SCREEN_WIDTH = 800
SCREEN_HEIGHT = 600
# Setter skjærm tittelen.
SCREEN_TITLE = "Lavrans sin høye måloppnålelse oppgave."

# Main classen
class LabbesSpill(arcade.Window):
    def __init__(self, width, height, title):
        super().__init__(width, height, title)


    def setup(self):

        pass

    def on_draw(self):
        # Rendrer skjærmen
        arcade.start_render()

        # Tegner toppen av treet.
        def draw_background():
            arcade.draw_rectangle_filled(SCREEN_WIDTH / 2, SCREEN_HEIGHT * 2 / 3,
                                         SCREEN_WIDTH - 1, SCREEN_HEIGHT * 2 / 3,
                                         arcade.color.SKY_BLUE)
            arcade.draw_rectangle_filled(SCREEN_WIDTH / 2, SCREEN_HEIGHT / 6,
                                         SCREEN_WIDTH - 1, SCREEN_HEIGHT / 3,
                                         arcade.color.DARK_SPRING_GREEN)

        def draw_trees():
            for x in range(45, SCREEN_WIDTH, 90):
                draw_pine_tree(x, SCREEN_HEIGHT / 3)
            for x in range(65, SCREEN_WIDTH, 90):
                draw_pine_tree(x, SCREEN_HEIGHT / 3 - 120)

        def draw_pine_tree(center_x, center_y):
            # Denne funksjonen tegner et tre
            # center_x: Posisjonen til midten av treet.
            # center_y: Posisjonen til midten av tømmeret.
            arcade.draw_rectangle_filled(center_x, center_y, 20, 40, arcade.color.DARK_BROWN)

            tree_bottom_y = center_y + 20

            # Tegner toppen av treet
            point_list = ((center_x - 40, tree_bottom_y),
                          (center_x, tree_bottom_y + 100),
                          (center_x + 40, tree_bottom_y))

            arcade.draw_polygon_filled(point_list, arcade.color.DARK_GREEN)

    def update(self, delta_time):

        pass

def main():
    game = LabbesSpill(SCREEN_WIDTH, SCREEN_HEIGHT, SCREEN_TITLE)
    game.setup()
    arcade.run()

if __name__ == "__main__":
    main()
